@model List<CategoriaModel>
@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}
<header class="d-flex justify-content-between align-tems-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Cadastrar" class="btn btn-primary">Nova Categoria</a>
    </div>
</header>
<partial name="_Mensagem"></partial>
<!-- <partial name="_Mensagem"></partial> -->
@if(Model.Count() > 0){
    /* Aqui verificamos se a quantidade de categorias recebida é maior que 0, se sim, criamos a parte
    de cima da tabela */
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var categoria in Model){
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        <a asp-action="Cadastrar" asp-route-id="@categoria.IdCategoria" class="btn
                        btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@categoria.IdCategoria" class="btn
                        btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>Não há nenhuma categoria cadastrada!</p>
}